@model AtendimentoProntoSocorro.Models.Paciente

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Paciente</h1>

<h4>Paciente</h4>
<hr />
<div class="container">
    <div class="x_panel">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="row">
                <div class="col-md-4 form-group">
                    <label asp-for="CPF" class="control-label"></label>
                    <input type="text" asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>

                <div class="col form-group">
                    <label asp-for="OrigemFuncionario" class="control-label"></label>
                    @Html.DropDownListFor(r => r.OrigemFuncionario, new SelectList(Enum.GetValues(typeof(Origem))), "Selecione um item", new { @class = "form-control" })
                    <span asp-validation-for="OrigemFuncionario" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label asp-for="RG" class="control-label"></label>
                    <input type="text" asp-for="RG" class="form-control" />
                    <span asp-validation-for="RG" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="CartaoSUS" class="control-label">Cartão SUS</label>
                    <input type="text" asp-for="CartaoSUS" class="form-control" />
                    <span asp-validation-for="CartaoSUS" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="NumeroProntuario" class="control-label">Número Prontuario</label>
                    <input type="text" asp-for="NumeroProntuario" class="form-control" />
                    <span asp-validation-for="NumeroProntuario" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="RegistroFuncional" class="control-label">Registro Funcional</label>
                    <input type="text" asp-for="RegistroFuncional" class="form-control" />
                    <span asp-validation-for="RegistroFuncional" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input type="text" asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col form-group">
                    <label asp-for="DataNascimento" class="control-label">Data Nascimento</label>
                    <input asp-for="DataNascimento" type="date" data-val="true" asp-format="{0:dd-M-yyyy}"  class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="GeneroPaciente" class="control-label"></label>
                    @Html.DropDownListFor(m => m.GeneroPaciente, new SelectList(Enum.GetValues(typeof(Genero))), "Selecione o Genero", new { @class = "form-control" })
                    <span asp-validation-for="GeneroPaciente" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="EtiniaPaciente" class="control-label"></label>
                    @Html.DropDownListFor(r => r.EtiniaPaciente, new SelectList(Enum.GetValues(typeof(Etinia))), "Selecione um item", new { @class="form-control"})
                    <span asp-validation-for="EtiniaPaciente" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-6 form-group">
                    <label asp-for="Logradouro" class="control-label"></label>
                    <input type="text" asp-for="Logradouro" class="form-control" />
                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                </div>
                <div class="col-3 form-group">
                    <label asp-for="NumeroLogradouro" class="control-label"></label>
                    <input type="text" asp-for="NumeroLogradouro" class="form-control" />
                    <span asp-validation-for="NumeroLogradouro" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input type="text" asp-for="Complemento" class="form-control" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
            </div>
            

            <div class="row">
                <div class="col form-group">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input type="text" asp-for="Bairro" class="form-control" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Municipio" class="control-label"></label>
                    <input type="text" asp-for="Municipio" class="form-control" />
                    <span asp-validation-for="Municipio" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="UF" class="control-label"></label>
                    <input type="text" asp-for="UF" class="form-control" />
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="CEP" class="control-label"></label>
                    <input type="text" asp-for="CEP" class="form-control" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
            </div>
            
            
            <div class="form-group">
                <label asp-for="NomeMae" class="control-label"></label>
                <input type="text" asp-for="NomeMae" class="form-control" />
                <span asp-validation-for="NomeMae" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomePai" class="control-label"></label>
                <input type="text" asp-for="NomePai" class="form-control" />
                <span asp-validation-for="NomePai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Responsavel" class="control-label"></label>
                <input type="text" asp-for="Responsavel" class="form-control" />
                <span asp-validation-for="Responsavel" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-3 form-group">
                    <label asp-for="Telefone1" class="control-label"></label>
                    <input type="text" asp-for="Telefone1" class="form-control" />
                    <span asp-validation-for="Telefone1" class="text-danger"></span>
                </div>
                <div class="col-3 form-group">
                    <label asp-for="Telefone2" class="control-label"></label>
                    <input type="text" asp-for="Telefone2" class="form-control" />
                    <span asp-validation-for="Telefone2" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
           

            <div class="form-group">
                <label asp-for="InformacaoComplementar" class="control-label"></label>
                <input type="text" asp-for="InformacaoComplementar" class="form-control" />
                <span asp-validation-for="InformacaoComplementar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}